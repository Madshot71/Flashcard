unit _addCard;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs , ExtCtrls , StdCtrls,Buttons, ComCtrls, Menus;

type
  TAddCard = class(TForm)
    Definition: TButtonedEdit;
    Button1: TButton;
    Explaination: TRichEdit;
    GroupName: TButtonedEdit;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  AddCard: TAddCard;

implementation

{$R *.dfm}

uses FlashCardManager , _home;

procedure TAddCard.Button1Click(Sender: TObject);
begin

  if GroupName.Text = '' then
  begin
    showMessage('Error : Group Field is Empty');
    exit;
  end;

  if Definition.Text = '' then
  begin
    ShowMessage('either Definition or Explaination is empty');
    exit;
  end;
  manager.AddCard(GroupName.Text ,Definition.Text , Explaination.Text);
  Close;
end;

end.
