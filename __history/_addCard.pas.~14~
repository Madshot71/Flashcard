unit _addCard;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs , ExtCtrls , StdCtrls,Buttons, ComCtrls, Menus;

type
  TAddCard = class(TForm)
    Definition: TButtonedEdit;
    Button1: TButton;
    Explaination: TRichEdit;
    cbGroups: TComboBox;
    procedure Button1Click(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  AddCard: TAddCard;

implementation

{$R *.dfm}

uses FlashCardManager , _home;

procedure TAddCard.Button1Click(Sender: TObject);
var
 index : Integer;
begin

  if cbGroups.items.Count <= 0 then
  begin
    showMessage('Error : Group Field is Empty');
    exit;
  end;

  if Definition.Text = '' then
  begin
    ShowMessage('either Definition or Explaination is empty');
    exit;
  end;
  manager.AddCard(cbGroups.items[index] ,Definition.Text , Explaination.Text);
  Close;
end;

procedure TAddCard.FormShow(Sender: TObject);
var
 I : Integer;
begin
  cbGroups.items.Clear;

  for I := 0 to manager.Subject.Count - 1 do
  begin
    cbGroups.items.Add(manager.Subject[i].subjectName);
  end;
end;

end.
